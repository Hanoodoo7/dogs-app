<%- include('../partials/head') %>

<form action="/listings" method="POST" class="container mt-4" style="max-width: 600px;" enctype="multipart/form-data">
  <h2 class="mb-4">Adding a furry friend</h2>

  <div class="mb-3">
    <label for="title" class="form-label">Name</label>
    <input type="text" name="title" id="title" class="form-control" required />
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Breed and Pet info</label>
    <textarea name="description" id="description" class="form-control" rows="3" required></textarea>
  </div>

  <div class="mb-3">
    <label for="age" class="form-label">Age</label>
    <input type="number" name="age" id="age" class="form-control" min="0" required />
  </div>

  <div class="mb-3">
    <label for="image" class="form-label">Upload an Image</label>
    <input type="file" accept="image/*" name="image" id="image" class="form-control"  />
  </div>

  <button type="submit" class="btn btn-primary">Create Listing</button>
</form>

</body>
</html>